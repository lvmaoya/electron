{
  "name": "todo",
  "version": "1.0.0",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "vite:build": "env=product vite build",
    "electron:serve": "env=development vite & env=development nodemon --exec electron .",
    "electron:build": "env=product vite build & env=product electron-builder",
    "start": "env=development vite & env=development nodemon --exec electron .",
    "fix": "electron-fix start"
  },
  "build": {
    "appId": "luOne",
    "productName": "todo",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "electron-build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "todo"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.1",
    "nodemon": "^3.1.9",
    "@vitejs/plugin-vue": "^5.2.1",
    "vite": "^6.0.5",
    "vite-plugin-vue-devtools": "^7.6.8",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  }
}